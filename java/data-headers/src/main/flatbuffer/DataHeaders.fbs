namespace org.apache.arrow.format.dataheaders;

table Buffer {
  data:long;
  length:int;
}

// Representing a single array (aka ValueVector), typically
table BufferList {
  buffers:[Buffer];
}

// Multiple arrays -- could be used for long arrays or a
// whole table row batch
table ArrayBatch {
  n_arrays: int;
  arrays: [BufferList];
}

root_type ArrayBatch;